# 服务器配置
PORT=3000
BASE_URL=http://localhost

# MySQL 数据库配置
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=mcp

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# 阿里云 OSS 配置（可选）
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=your_bucket_name
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# 腾讯云短信服务配置
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_REGION=ap-guangzhou
SMS_SDK_APP_ID=your_sms_sdk_app_id
SMS_SIGN_NAME=your_sms_sign_name
SMS_TEMPLATE_ID=your_sms_template_id

# AI 服务配置
AI_API_URL=https://your-ai-service.com/v1
AI_API_KEY=your_ai_api_key
AI_MODEL=qwen2.5-72b-instruct

# 数据库清理配置（可选）
DB_CLEANUP_ENABLED=true
DB_CLEANUP_INTERVAL_HOURS=24
DB_DATA_RETENTION_DAYS=7
DB_CLEANUP_BATCH_SIZE=1000

# 云函数环境标识（部署时使用）
# FORCE_CLOUD_FUNCTION=false
